{
  "name": "rss-puzzle",
  "version": "1.0.0",
  "description": "",
  "main": "webpack.config.js",
  "scripts": {
    "start": "webpack serve",
    "build-dev": "webpack --node-env=development",
    "build-prod": "webpack --node-env=production",
    "clear": "rd /s /q dist",
    "format": "prettier --write \"**/*.+(js|jsx|json|css|sass|md)\"",
    "ci:format": "prettier --check \"**/*.+(js|jsx|json|css|sass|md)\"",
    "lint": "eslint \"**/*.+(js|jsx|json|css|sass|md)\"",
    "lint:fix": "eslint --fix \"**/*.+(js|jsx|json|css|sass|md)\"",
    "pre-commit": "lint-staged",
    "pre-push": "eslint && validate-branch-name"
  },
  "lint-staged": {
    "*.+(js|jsx|json|css|md)": [
      "prettier --write",
      "lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "eslint && validate-branch-name -r branch-rules.json"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "file-loader": "^6.2.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^9.0.11",
    "image-webpack-loader": "^8.1.0",
    "lint-staged": "^15.2.2",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.27",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.1.1",
    "prettier": "^3.2.5",
    "sass": "^1.64.2",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "validate-branch-name": "^1.3.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
